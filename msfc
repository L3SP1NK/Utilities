#!/bin/bash
## Metasploit framework launcher.
## A launcher is needed since you can't background a session.
## (Ctrl+Z background the shell process instead)

RESET_COLOR="\e[0m"
RED="\e[31m"

REQUIREMENTS="msfconsole"

which ${REQUIREMENTS} > /dev/null
if [[ ${?} -eq "0" ]]
	then
		## Disable Ctrl-Z
		trap "" TSTP
		/usr/bin/msfconsole
	else
		echo "${RED}The Metasploit framework is not installed on this system!\nExiting...${RESET_COLOR}"
		exit 1
fi
