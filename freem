#!/bin/bash

function CACHE_DIR()
{
 	# cache
	rm -rf .cache
	rm -rf /root/.mozilla/firefox/*/cache2
}

function SWAP_SPACE()
{
 	# swap
	sync
	swapoff -av
	swapon -av
	sync
	echo 3 > /proc/sys/vm/drop_caches
}

echo -e "\e[31mPlease close all application currently running ! \e[0m"
read
echo -e "\e[33mRemoving the cache directory...\e[0m"
CACHE_DIR
echo -e "\e[33mEmptying swap space and synchronizing cached writes to persistent storage...\e[0m"
SWAP_SPACE
