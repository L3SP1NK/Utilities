#!/bin/bash
# Update my git repository

# Set color
GREEN="\e[32m"
RESET_COLOR="\e[0m"

CWD=$(pwd)
REPO_DIR=/opt/utilities

cd ${REPO_DIR}
git pull
git add -v * | ccze -A
git commit -a
git push -v | ccze -A

ln -f * /bin
cd dot-files
ln -f .* ~

cd ${CWD}

echo -e "${GREEN}Done !${RESET_COLOR}\e[0m"
