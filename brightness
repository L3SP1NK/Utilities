#!/bin/bash
## Change the brightness of multiple monitor.

## Set colors.
BOLD="\e[1m"
GREEN="\e[32m"
RED="\e[31m"
BLUE="\e[34m"

WARN="${RED}${BOLD} [-]${RC}"
INFO="${BLUE}${BOLD} [*]${RC}"
GOOD="${GREEN}${BOLD} [+]${RC}"

## Display:
DISPLAY_1="VGA1"
DISPLAY_2="LVDS1"

if [[ ${1} && ${1} != "0" && ${1} != "0." && ${1} != "0.0" ]]
	then
		xrandr --output ${DISPLAY_1} --brightness ${1} --output ${DISPLAY_2} --brightness ${1}
	else
		echo -e "${WARN} Please, specify a brightness level... (from 0.1 to 1)\nExiting..."
		exit 1
fi
