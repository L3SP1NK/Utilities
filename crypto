#!/bin/bash
# Get the price in USD of the selected cryptocurrencies.

# Coinbase API URL (not all crypto available)
#BITCOIN=$(curl -s https://api.coinbase.com/v2/prices/BTC-USD/buy | cut -d\: -f5 | cut -d\" -f2)
#ETHERUM=$(curl -s https://api.coinbase.com/v2/prices/ETH-USD/buy | cut -d\: -f5 | cut -d\" -f2)
#echo -e "\e[33mBTC: \e[32m$\e[0m"${BITCOIN}
#echo -e "\e[36mETH: \e[32m$\e[0m"${ETHERUM}

# Kraken API URL
KRAKEN_URL='https://api.kraken.com/0/public/Ticker?pair='
# Binance Smart Chain
BSC_URL='https://api.bscscan.com/api?module=stats&action=bnbprice&apikey='
# BSC API key, get one at https://bscscan.com/apis
BSC_API="CQ21TRV2YCQ3WV9EA4TSR5BRD12P2TDG16"

RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
BLUE="\e[34m"
CYAN="\e[36m"
RESET_COLOR="\e[0m"

echo -e "${CYAN}$(date '+ %T - %A %d %B %Y')${RESET_COLOR}"
echo -e "${YELLOW}BTC${RESET_COLOR}: ${GREEN}\$${RESET_COLOR}$(curl -s "${KRAKEN_URL}BTCUSD" | jq | awk "/a/ { getline; print $1;}" | sed 's/\("\s*\|,\)//g' | sed 's/ //g'|perl -pe 's/^0+ | 0+$//xg')"
echo -e "${BLUE}ETH${RESET_COLOR}: ${GREEN}\$${RESET_COLOR}$(curl -s "${KRAKEN_URL}ETHUSD" | jq | awk "/a/ { getline; print $1;}" | sed 's/\("\s*\|,\)//g' | sed 's/ //g'|perl -pe 's/^0+ | 0+$//xg')"
echo -e "${RED}XMR${RESET_COLOR}: ${GREEN}\$${RESET_COLOR}$(curl -s "${KRAKEN_URL}XMRUSD" | jq | awk "/a/ { getline; print $1;}" | sed 's/\("\s*\|,\)//g' | sed 's/ //g'|perl -pe 's/^0+ | 0+$//xg')"
echo -e "${YELLOW}BNB${RESET_COLOR}: ${GREEN}\$${RESET_COLOR}$(curl -s "${BSC_URL}${BSC_API}" | cut -d "," -f 5 | cut -d : -f 2 | sed 's/"//g')"
