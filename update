#!/bin/bash
# .:: Update the system ::.

function CHECK_DONE()
{
	if [[ ${?} -eq "0" ]]
		then
			echo -e "\e[32mDone!\e[0m"
		else
			echo -e "\e[31mSomething went wrong!\e[0m"
	fi
}

function UPDATE_APT()
{
	apt clean -y
	apt autoclean -y
	apt autoremove --purge -y

	dpkg --configure -a
	apt --fix-broken install

	apt update
	apt upgrade -y

	apt update
	apt dist-upgrade -y

	apt update
	apt full-upgrade -y

	dpkg --configure -a
	apt --fix-broken install

	apt clean -y
	apt autoclean -y
	apt autoremove --purge -y

}

function TRASH_LOG()
{
	mkdir -p ~/.trash
	trash -vf $(find / -type f -name "*.log")
	trash -vf $(find / -type f -name "*.log*")

	trash -vf $(find / -type f -name "*.old")
	trash -vf $(find / -type f -name "*.old*")

	trash /var/log/journal
}

WORKSPACE=/


# Kill the "enter username prompt" when git pull
function NO_INPUT()
{
	if [[ -t 0 ]]
		then
			stty -echo -icanon time 0 min 0
	fi
}

function UPDATE_GIT()
{
	cd ${WORKSPACE}
	for GIT_PATH in $(find ${WORKSPACE} -type d -name ".git")
		do
			cd ${GIT_PATH};
			echo -e "\n${GIT_PATH}";
			cd ..
			git config pull.rebase false
			git stash
			git pull
			cd ${WORKSPACE}
		done
}

TIME=$(date +%H:%M:%S)
echo -e "\e[35m${TIME}\e[0m"
echo -e "\e[33mUpdating APT packages...\e[0m"
UPDATE_APT
CHECK_DONE
echo -e "\e[35m${TIME}\e[0m"
echo -e "\e[33mUpdating GIT repositories...\e[0m"
UPDATE_GIT
CHECK_DONE
echo -e "\e[35m${TIME}\e[0m"
echo -e "\e[33mMoving logs and other unnecessary files to trash...\e[0m"
TRASH_LOG 2>/dev/null
echo -e "\e[35m${TIME}\e[0m"

